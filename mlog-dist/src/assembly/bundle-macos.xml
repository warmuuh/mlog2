<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>bin</id>
	<formats>
		<format>tgz</format>
	</formats>
	<baseDirectory></baseDirectory>
	<!-- <includeBaseDirectory>false</includeBaseDirectory> -->
	
	<fileSets>
		<fileSet>
			<directory>src/bin/macos-bundle</directory>
			<outputDirectory />
			<filtered>false</filtered>
			<excludes>
				<exclude>**/Milkman</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/bin/macos-bundle</directory>
			<outputDirectory>/</outputDirectory>
			<lineEnding>unix</lineEnding>
			<fileMode>744</fileMode>
			<includes>
				<include>**/Milkman</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target/jre-macos64</directory>
			<outputDirectory>/Milkman.app/Contents/Resources/jre</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
	</fileSets>
	<moduleSets>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.github.warmuuh:milkman</include>
			</includes>
			<binaries>
				<outputDirectory>/Milkman.app/Contents/Resources</outputDirectory>
				<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
				<unpack>false</unpack>
				<includeDependencies>false</includeDependencies>

			</binaries>
		</moduleSet>
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.github.warmuuh:milkman-rest</include>
				<include>com.github.warmuuh:milkman-note</include>
				<include>com.github.warmuuh:milkman-scripting</include>
				<include>com.github.warmuuh:milkman-explore</include>
				<include>com.github.warmuuh:milkman-jdbc</include>
				<include>com.github.warmuuh:milkman-sync-git</include>
				<include>com.github.warmuuh:milkman-privatebin</include>
				<include>com.github.warmuuh:milkman-graphql</include>
			</includes>
			<binaries>
				<unpack>false</unpack>
				<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
				<outputDirectory>/Milkman.app/Contents/Resources/plugins</outputDirectory>
				<includeDependencies>false</includeDependencies>
			</binaries>
		</moduleSet>
	</moduleSets>
</assembly>